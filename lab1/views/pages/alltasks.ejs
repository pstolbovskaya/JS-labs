<div class = "row">
  <% filedata.forEach((task) =>{ %>
    
      <div class = "column">
    <div class="card">
      <div tabindex="0">
        <div class="">
          <h2 class=><%= task.title %></h2>
        </div>
        <div class=""><%= task.description %></div>
      </div>
        <p>Days before deadline: <%= task.deadline %> </p>
        <p><%= task.date %></p>
        <p><a href="download/<%= task.id %>"><%= task.userFilename %></a></p>
      <div class="mdc-card__actions">
        <div class="mdc-card__action-buttons">
          <form method="POST" class="editdelete" action="/task/delete/<%= task.id %>">
          <a class="mdc-button mdc-card__action mdc-card__action--button" href="/task/<%= task.id %>">Edit</a>
            <input type="hidden" id="id" name="id" value="<%= task.id %>">
            <button class="mdc-button mdc-card__action mdc-card__action--button" type="submit">Delete</button>
            
          </form>
          
          </div>
          <div class="status" id="status" title="Status"><%= task.status %></div>
         
        </div>
     
        
      </div>
      </div>
  <% }) %>
    
    </div>

</body>
